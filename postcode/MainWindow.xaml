<Window x:Class="postcode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:postcode"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
        <Label FontSize="30" Foreground="Purple" FontWeight="Bold">Project Purple</Label>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label>Postcode:</Label>
                <TextBox x:Name="posty" Margin="10,0,0,0">WR14 2XD</TextBox>
                <Button Click="getres" Width="100" Margin="10,0,0,0">Get</Button>
        </StackPanel>

            <TextBlock x:Name="output"></TextBlock>

        </StackPanel>
    </Grid>
</Window>
